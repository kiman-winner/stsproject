			value="/WEB-INF/view/inc/header.jsp" />
		<put-attribute name="visual"
			value="/WEB-INF/view/customer/inc/visual.jsp" />
		<put-attribute name="aside"
			value="/WEB-INF/view/customer/inc/aside.jsp" />

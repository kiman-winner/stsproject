		<put-attribute name="visual"
			value="/WEB-INF/view/member/inc/visual.jsp" />
		<put-attribute name="aside"
			value="/WEB-INF/view/member/inc/aside.jsp" />
		<put-attribute name="body"
			value="/WEB-INF/view/member/{1}.jsp" /><!-- 첫번째 와일드카드로 오는 문자열을 
			대입해준다. -->
		<put-attribute name="footer"
			value="/WEB-INF/view/inc/footer.jsp" />
	</definition>



</tiles-definitions>
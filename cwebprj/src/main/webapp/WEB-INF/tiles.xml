<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<definition name="root.*"
		template="/WEB-INF/view/inc/layout.jsp"> <!-- 루트 관련 요청 -->
		<put-attribute name="title" value="공지사항" />
		<put-attribute name="header"
			value="/WEB-INF/view/inc/header.jsp" />
		<put-attribute name="visual"
			value="/WEB-INF/view/customer/inc/visual.jsp" />
		<put-attribute name="aside"
			value="/WEB-INF/view/customer/inc/aside.jsp" />
		<put-attribute name="body" value="/WEB-INF/view/{1}.jsp" /><!-- 
			첫번째 와일드카드로 오는 문자열을 대입해준다. -->
		<put-attribute name="footer"
			value="/WEB-INF/view/inc/footer.jsp" />
	</definition>

	<definition name="notice.*"
		template="/WEB-INF/view/customer/inc/layout.jsp"> <!-- 공지사항 관련 요청 -->

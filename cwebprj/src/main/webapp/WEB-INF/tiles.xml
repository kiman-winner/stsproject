			value="/WEB-INF/view/customer/notice/{1}.jsp" /><!-- 첫번째 와일드카드로 오는 문자열을 
			대입해준다. -->
		<put-attribute name="footer"
			value="/WEB-INF/view/inc/footer.jsp" />
	</definition>


	<definition name="main.*"
		template="/WEB-INF/view/inc/layout.jsp"> <!-- 메인 관련 요청 -->
		<put-attribute name="header"
			value="/WEB-INF/view/inc/header.jsp" />
		<put-attribute name="body" value="/WEB-INF/view/main/{1}.jsp" /><!-- 
			첫번째 와일드카드로 오는 문자열을 대입해준다. -->
